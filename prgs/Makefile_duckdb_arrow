C = gcc
CXX = g++
CXXFLAGS = -pthread -std=c++17 -march=native
INCLUDES = -I/opt/homebrew/Cellar/duckdb/1.2.1/include -I../src -I../../ds_common/src -I../../flavic48/src -I/usr/local/include
L_FLAGS = -L/opt/homebrew/Cellar/duckdb/1.2.1/lib -L /usr/local/lib
M_FLAGS = -lduckdb -larrow

opt: CXXFLAGS += -g -O2 -DNDEBUG
opt: duckdb_arrow

debug: CXXFLAGS += -g -O0 -fno-inline
debug: duckdb_arrow

release: CXXFLAGS += -O3 -funroll-loops -DNDEBUG
release: duckdb_arrow

asan: CXXFLAGS += -static-libsan -fno-inline -O0 -g -fsanitize=address -fno-omit-frame-pointer
asan: duckdb_arrow

clean:
	rm duckdb_arrow
	rm -rf duckdb_arrow.dSYM

duckdb_arrow: duckdb_arrow.cpp
	$(CXX) $(CXXFLAGS) $(INCLUDES) duckdb_arrow.cpp -o duckdb_arrow $(L_FLAGS) $(M_FLAGS)
